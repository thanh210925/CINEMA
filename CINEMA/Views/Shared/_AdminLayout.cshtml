<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CineZone Admin</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    @RenderSection("Styles", required: false)

    <style>
        html, body {
            height: 100%; /* full chiều cao */
        }

        body {
            display: flex;
            flex-direction: column;
        }

        main {
            flex: 1; /* chiếm toàn bộ không gian còn lại */
        }
    </style>
</head>
<body class="bg-light">
    <!-- Navbar -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold" asp-area="" asp-controller="Admin" asp-action="Dashboard">CineZone Admin</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarAdmin"
                        aria-controls="navbarAdmin" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarAdmin">
                    <!-- Left menu -->
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Admin" asp-action="Dashboard">Dashboard</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Movie" asp-action="Index">Quản lý phim</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="CustomerAdmin" asp-action="Index">Quản lý khách hàng</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Combo" asp-action="Index">Quản lý bắp nước</a>
                        </li>
                    </ul>

                    <!-- Right menu -->
                    <ul class="navbar-nav ms-auto">
                        @if (Context.Session.GetString("Role") == "Admin")
                        {
                            <li class="nav-item">
                                <span class="nav-link text-white-50">👤 Admin: <b>@Context.Session.GetString("Name")</b></span>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-danger fw-bold" asp-controller="Admin" asp-action="Logout">Đăng xuất</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Main content -->
    <main class="container-fluid py-4">
        @RenderBody()
    </main>

    <!-- Footer luôn dưới cùng -->
    <footer class="border-top footer text-muted text-center py-3 bg-white shadow-sm">
        <div class="container-fluid">
            &copy; 2025 - CINEMA Admin
        </div>
    </footer>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
