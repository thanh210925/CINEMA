@model IEnumerable<CINEMA.Models.Combo>
@{
    ViewData["Title"] = "Quản lý Bắp Nước";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-uppercase border-bottom pb-2">@ViewData["Title"]</h2>
        <a asp-action="Create" class="btn btn-dark shadow-sm rounded-pill px-4">
            <i class="bi bi-plus-circle"></i> Thêm Combo
        </a>
    </div>

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm h-100 border-0 rounded-4 combo-card bg-light">
                    <img src="@item.ImageUrl" class="card-img-top rounded-top-4" alt="@item.Name" style="height:220px; object-fit:cover;">
                    <div class="card-body">
                        <h5 class="fw-bold">@item.Name</h5>
                        <p class="text-muted">@item.Description</p>
                        <h6 class="fw-bold text-dark">@String.Format("{0:N0} VNĐ", item.Price ?? 0)</h6>
                    </div>
                    <div class="card-footer bg-white border-0 d-flex justify-content-between">
                        <a asp-action="Edit" asp-route-id="@item.ComboId" class="btn btn-outline-dark btn-sm rounded-pill">
                            <i class="bi bi-pencil"></i> Sửa
                        </a>
                        <a asp-action="Details" asp-route-id="@item.ComboId" class="btn btn-outline-secondary btn-sm rounded-pill">
                            <i class="bi bi-eye"></i> Xem
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.ComboId" class="btn btn-outline-dark btn-sm rounded-pill">
                            <i class="bi bi-trash"></i> Xóa
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .combo-card {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

        .combo-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 20px rgba(0,0,0,0.15);
        }
</style>
