@model CINEMA.Models.Combo
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Chỉnh sửa Combo";
}

<style>
    body {
        background: linear-gradient(135deg, #fff8e1 0%, #fff3cd 100%);
        font-family: 'Segoe UI', sans-serif;
    }

    .form-wrapper {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 90vh;
    }

    .form-card {
        background: linear-gradient(135deg, #f7c948 0%, #f5b544 100%);
        border-radius: 14px;
        padding: 2.5rem 2rem;
        box-shadow: 0 8px 18px rgba(0, 0, 0, 0.1);
        width: 500px;
        transition: all 0.3s ease;
    }

    .form-card:hover {
        box-shadow: 0 10px 28px rgba(245, 181, 68, 0.35);
        transform: translateY(-2px);
    }

    h2 {
        color: #3a2e00;
        font-weight: 700;
        text-align: center;
        margin-bottom: 1.8rem;
    }

    label {
        font-weight: 600;
        color: #2f2300;
    }

    .form-control {
        border-radius: 8px;
        border: 1.5px solid rgba(75, 59, 0, 0.25);
        box-shadow: inset 0 1px 3px rgba(0, 0, 0, 0.05);
        transition: all 0.25s ease;
    }

    .form-control:focus {
        border-color: #f1c40f;
        box-shadow: 0 0 6px rgba(241, 196, 15, 0.3);
    }

    .btn-update {
        background: linear-gradient(135deg, #3a2e00 0%, #5b4605 100%);
        color: #fff8e1;
        border: none;
        border-radius: 10px;
        padding: 0.7rem 1.6rem;
        font-weight: 600;
        transition: all 0.25s ease;
    }

    .btn-update:hover {
        background: linear-gradient(135deg, #5b4605 0%, #3a2e00 100%);
        transform: translateY(-2px);
        box-shadow: 0 6px 14px rgba(0, 0, 0, 0.25);
    }

    .btn-back {
        background: white;
        color: #3a2e00;
        border: 1.5px solid rgba(75, 59, 0, 0.25);
        border-radius: 10px;
        padding: 0.7rem 1.4rem;
        font-weight: 600;
        transition: all 0.25s ease;
    }

    .btn-back:hover {
        background: #fff3cd;
        border-color: #f1c40f;
        box-shadow: 0 4px 10px rgba(241, 196, 15, 0.2);
    }
</style>

<div class="form-wrapper">
    <div class="form-card">
        <h2>@ViewData["Title"]</h2>

        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="ComboId" />

            <div class="mb-3">
                <label class="form-label">Tên Combo</label>
                <input asp-for="Name" class="form-control" />
            </div>

            <div class="mb-3">
                <label class="form-label">Mô tả</label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
            </div>

            <div class="mb-3">
                <label class="form-label">Giá (VNĐ)</label>
                <input asp-for="Price" type="number" class="form-control" />
            </div>

            <div class="mb-4">
                <label class="form-label">Ảnh (URL)</label>
                <input asp-for="ImageUrl" class="form-control" />
            </div>

            <div class="d-flex justify-content-between">
                <button type="submit" class="btn-update">💾 Cập nhật</button>
                <a asp-action="Index" class="btn-back">↩ Quay lại</a>
            </div>
        </form>
    </div>
</div>
