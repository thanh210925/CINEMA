@model IEnumerable<CINEMA.Models.Movie>
@{
    ViewData["Title"] = "Trang chủ";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">CineZone – Điểm hẹn điện ảnh của bạn</h2>

    <!-- Banner chạy -->
    <div id="bannerCarousel" class="carousel slide carousel-fade" data-bs-ride="carousel">
        <!-- Dấu chấm -->
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#bannerCarousel" data-bs-slide-to="0" class="active"></button>
            <button type="button" data-bs-target="#bannerCarousel" data-bs-slide-to="1"></button>
            <button type="button" data-bs-target="#bannerCarousel" data-bs-slide-to="2"></button>
        </div>

        <!-- Ảnh banner -->
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/images/banner1.jpg" class="d-block w-100 banner-img" alt="Banner 1">
                <div class="carousel-caption d-none d-md-block bg-dark bg-opacity-50 rounded p-2">
                    <h5>Mua 1 tặng 1</h5>
                    <p>Áp dụng cho vé phim 2D vào thứ 3 hàng tuần</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="~/images/banner2.jpg" class="d-block w-100 banner-img" alt="Banner 2">
                <div class="carousel-caption d-none d-md-block bg-dark bg-opacity-50 rounded p-2">
                    <h5>Combo Bắp + Nước chỉ 49k</h5>
                    <p>Khuyến mãi khi đặt vé online</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="~/images/banner3.jpg" class="d-block w-100 banner-img" alt="Banner 3">
                <div class="carousel-caption d-none d-md-block bg-dark bg-opacity-50 rounded p-2">
                    <h5>Suất chiếu đặc biệt</h5>
                    <p>Xem phim bom tấn sớm hơn 1 ngày</p>
                </div>
            </div>
        </div>

        <!-- Nút điều hướng -->
        <button class="carousel-control-prev" type="button" data-bs-target="#bannerCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon"></span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#bannerCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon"></span>
        </button>
    </div>
</div>

<!-- PHIM ĐANG CHIẾU -->
<div class="container mt-5">
    <h2 class="fw-bold text-center mb-4">🎬 PHIM ĐANG CHIẾU</h2>
    <div class="row">
        @if (Model != null && Model.Any())
        {
            foreach (var movie in Model)
            {
                <div class="col-md-3 mb-4">
                    <div class="card h-100 shadow-sm border-0">
                        <img src="@movie.PosterUrl" class="card-img-top" alt="@movie.Title"
                             style="height: 350px; object-fit: cover;" />
                        <div class="card-body text-center">
                            <h5 class="card-title fw-bold">@movie.Title</h5>
                            <p class="text-muted small">
                                @movie.AgeRating | @movie.Duration phút
                            </p>
                            <a asp-controller="Home" asp-action="BookTicket" asp-route-id="@movie.MovieId"
                               class="btn btn-warning fw-bold w-100">
                                🎟 Đặt vé ngay
                            </a>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <p class="text-center text-muted">Hiện chưa có phim nào đang chiếu.</p>
        }
    </div>
</div>

<!-- CSS -->
<style>
    .banner-img {
        height: 400px;
        object-fit: cover;
    }

    .carousel-caption h5,
    .carousel-caption p {
        color: #fff;
        text-shadow: 1px 1px 4px rgba(0,0,0,0.8);
    }
</style>
